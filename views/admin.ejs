<%- include('header') -%>

<div class="admin">
<h1><%= title %></h1>
  <% if (list.length === 0) { %>
    <p>Engir notendur.</p>
  <% } %>
  <form method="post" action="/admin/updateAdmin">
  <table class="table">
    <tr>
      <% if (locals.isAdmin === true ) { %>
      <th>Stjórnandi?</th>
      <% } %>
      <th>Notendanafn</th>
      <th>Nafn</th>
      <th>Netfang</th>
    </tr>
    <% list.forEach((user) => { %>
    <tr>
      <% if (locals.isAdmin === true ) { %>
      <td><input type="checkbox" name="admin[]" value="<%= user.id %>"></td>
      <% } %>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
    </tr>
    <% }); %>
  </table>
<% if (locals.isAdmin === true ) { %>
  <button>Uppfæra stjórnendur</button>
<% } %>
</form>
</div>

<%- include('footer') -%>